& {
  @import 'blocks';
  @import 'draftjs';
  @import 'sidebar';

  @import 'toolbar';
  // @import 'utils';
}

.style-select-widget {
   .ui.card {
    min-width: unset;
  }

  .extra.content {
    justify-content: center !important;
    color: rgba(0,0,0,.4) !important;
    word-break: unset !important;
  }

  svg {
    width: 100% !important;
    display: block;
  }
}

.blocks-chooser {
  .searchbox div.input {
    height: 60px;
    padding: 0;
    border: none;
    font-weight: 400;
  }
}
